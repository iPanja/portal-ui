{
	"extends": "@repo/ts-config/react.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"@repo/react-ui/*": ["../../packages/react-ui/src/*"],
			"@repo/react-ui": ["../../packages/react-ui/src"],
			"@react-ui/*": ["../../packages/react-ui/src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"postcss.config.cjs",
		"tailwind.config.js"
	],
	"exclude": ["node_modules"]
}
